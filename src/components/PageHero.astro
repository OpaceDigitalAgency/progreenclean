---
interface Props {
  headline: string;
  subheadline?: string;
  icon?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
}

const {
  headline,
  subheadline,
  icon,
  ctaText,
  ctaHref = "/quote/",
  secondaryCtaText,
  secondaryCtaHref,
} = Astro.props;
---

<section class="bg-[#dfedea] relative overflow-hidden py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 lg:px-8 relative z-10">
    <div class="max-w-3xl">
      {
        icon && (
          <div class="mb-5">
            <span class="material-symbols-rounded text-5xl text-primary">
              {icon}
            </span>
          </div>
        )
      }
      <h1
        class="font-heading font-extrabold text-4xl md:text-5xl text-navy leading-tight mb-5"
        set:html={headline}
      />
      {
        subheadline && (
          <p class="text-lg text-navy/70 mb-6 leading-relaxed max-w-2xl">
            {subheadline}
          </p>
        )
      }
      {
        (ctaText || secondaryCtaText) && (
          <div class="flex flex-wrap gap-4">
            {ctaText && (
              <a
                href={ctaHref}
                class="inline-block bg-accent hover:bg-accent-dark text-white font-heading font-bold px-8 py-3 rounded-full transition-all shadow-md hover:shadow-lg hover:scale-105"
              >
                {ctaText}
              </a>
            )}
            {secondaryCtaText && secondaryCtaHref && (
              <a
                href={secondaryCtaHref}
                class="inline-flex items-center gap-2 bg-white/60 hover:bg-white text-navy font-heading font-bold px-8 py-3 rounded-full transition-all border border-navy/10"
              >
                {secondaryCtaText}
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</section>
