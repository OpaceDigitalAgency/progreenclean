---
interface Props {
  headline: string;
  subheadline?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  compact?: boolean;
}

const {
  headline,
  subheadline,
  ctaText = 'Get an Instant Quote',
  ctaHref = '/quote/',
  secondaryCtaText,
  secondaryCtaHref,
  compact = false,
} = Astro.props;
---
<section class={`relative isolate ${compact ? 'py-16 lg:py-20 overflow-hidden' : 'pt-24 pb-48 lg:pt-32 lg:pb-60 min-h-[600px]'}`}>
  {!compact ? (
    <div class="absolute inset-0 -z-20">
      <div class="absolute inset-0 bg-gradient-to-br from-aqua-light via-card-bg to-white"></div>
      <img src="/hero-bg.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-90" aria-hidden="true" />
      <div class="absolute bottom-0 left-0 right-0 h-48 lg:h-60 bg-gradient-to-t from-white/80 to-transparent"></div>
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-aqua-light via-card-bg to-white -z-20"></div>
  )}

  <div class="max-w-7xl mx-auto px-4 lg:px-8 w-full relative z-10">
    <div class={compact ? 'max-w-3xl' : 'max-w-2xl'}>
      <h1 class={`font-heading font-extrabold text-4xl md:text-5xl lg:text-6xl leading-tight mb-6 ${compact ? 'text-navy' : 'text-navy drop-shadow-lg'}`} set:html={headline} />
      {subheadline && <p class={`text-lg md:text-xl mb-8 leading-relaxed max-w-xl ${compact ? 'text-navy/70' : 'text-navy/80 drop-shadow'}`}>{subheadline}</p>}
      <div class="flex flex-wrap gap-4">
        <a href={ctaHref} class="inline-block bg-accent hover:bg-accent-dark text-white font-heading font-bold px-8 py-4 rounded-full text-lg transition-all shadow-lg shadow-accent/30 hover:shadow-xl hover:scale-105 focus:outline-2 focus:outline-accent focus:outline-offset-2">
          {ctaText}
        </a>
        {secondaryCtaText && secondaryCtaHref && (
          <a href={secondaryCtaHref} class="inline-flex items-center gap-2 border-2 border-navy text-navy font-heading font-bold px-8 py-4 rounded-full text-lg hover:bg-navy/10 transition-all focus:outline-2 focus:outline-navy focus:outline-offset-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>
  {!compact && (
    <div class="absolute bottom-0 left-0 right-0 z-10">
      <svg viewBox="0 0 1440 200" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full block" preserveAspectRatio="none" style="height: 140px; min-height: 100px;">
        <path d="M0,80 C180,130 360,40 540,70 C720,100 900,140 1080,90 C1200,60 1350,80 1440,65 L1440,200 L0,200 Z" fill="white" fill-opacity="0.5"/>
        <path d="M0,100 C200,145 400,60 600,90 C800,120 1000,150 1200,100 C1320,75 1400,95 1440,85 L1440,200 L0,200 Z" fill="white" fill-opacity="0.7"/>
        <path d="M0,125 C240,155 480,100 720,120 C960,140 1100,155 1260,130 C1360,115 1420,128 1440,120 L1440,200 L0,200 Z" fill="white" fill-opacity="0.9"/>
        <path d="M0,150 C300,170 600,130 900,155 C1100,165 1300,175 1440,160 L1440,200 L0,200 Z" fill="white"/>
      </svg>
    </div>
  )}
</section>

