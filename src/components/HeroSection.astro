---
interface Props {
  headline: string;
  subheadline?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  compact?: boolean;
}

const {
  headline,
  subheadline,
  ctaText = 'Get an Instant Quote',
  ctaHref = '/quote/',
  secondaryCtaText,
  secondaryCtaHref,
  compact = false,
} = Astro.props;
---
<section class={`relative isolate ${compact ? 'py-16 lg:py-20 overflow-hidden' : 'pt-44 pb-40 lg:pt-56 lg:pb-52 min-h-[600px]'}`}>
  {!compact ? (
    <div class="absolute inset-0 -z-10">
      <img src="/hero-bg.jpg" alt="" class="absolute inset-0 w-full h-full object-cover object-top" aria-hidden="true" />
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-aqua-light via-card-bg to-white -z-10"></div>
  )}

  <div class="max-w-7xl mx-auto px-4 lg:px-8 w-full relative z-10">
    <div class={compact ? 'max-w-3xl' : 'max-w-2xl'}>
      <h1 class={`font-heading font-extrabold text-4xl md:text-5xl lg:text-6xl leading-tight mb-6 ${compact ? 'text-navy' : 'text-navy drop-shadow-lg'}`} set:html={headline} />
      {subheadline && <p class={`text-lg md:text-xl mb-8 leading-relaxed max-w-xl ${compact ? 'text-navy/70' : 'text-navy/80 drop-shadow'}`}>{subheadline}</p>}
      <div class="flex flex-wrap gap-4">
        <a href={ctaHref} class="inline-block bg-accent hover:bg-accent-dark text-white font-heading font-bold px-8 py-4 rounded-full text-lg transition-all shadow-lg shadow-accent/30 hover:shadow-xl hover:scale-105 focus:outline-2 focus:outline-accent focus:outline-offset-2">
          {ctaText}
        </a>
        {secondaryCtaText && secondaryCtaHref && (
          <a href={secondaryCtaHref} class="inline-flex items-center gap-2 bg-secondary hover:bg-secondary/90 text-white font-heading font-bold px-8 py-4 rounded-full text-lg transition-all shadow-lg shadow-secondary/30 hover:shadow-xl hover:scale-105 focus:outline-2 focus:outline-secondary focus:outline-offset-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>
  {!compact && (
    <div class="absolute bottom-0 left-0 right-0 z-20 pointer-events-none">
      <svg viewBox="0 0 1440 160" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full block" preserveAspectRatio="none" style="height: 120px;">
        <path d="M0,100 C180,140 360,60 540,80 C720,100 900,140 1080,100 C1200,75 1350,90 1440,80 L1440,160 L0,160 Z" fill="white" fill-opacity="0.6"/>
        <path d="M0,115 C200,150 400,80 600,100 C800,120 1000,150 1200,110 C1320,90 1400,105 1440,100 L1440,160 L0,160 Z" fill="white" fill-opacity="0.8"/>
        <path d="M0,130 C240,155 480,110 720,125 C960,140 1100,155 1260,135 C1360,120 1420,130 1440,125 L1440,160 L0,160 Z" fill="white"/>
        <path d="M0,145 C300,160 600,135 900,148 C1100,155 1300,160 1440,150 L1440,160 L0,160 Z" fill="white"/>
      </svg>
    </div>
  )}
</section>

