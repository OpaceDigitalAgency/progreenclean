---
interface Props {
  headline: string;
  subheadline?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  compact?: boolean;
}

const {
  headline,
  subheadline,
  ctaText = 'Get a Free Quote',
  ctaHref = '/quote/',
  secondaryCtaText,
  secondaryCtaHref,
  compact = false,
} = Astro.props;
---
<section class={`relative overflow-hidden ${compact ? 'py-16 lg:py-20' : 'min-h-[calc(100vh-5rem)] flex items-center py-20'}`}>
  <div class="absolute inset-0 bg-gradient-to-br from-aqua-light via-white to-off-white -z-10"></div>
  <div class="absolute top-10 right-10 w-72 h-72 bg-primary/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-10 left-10 w-96 h-96 bg-accent/5 rounded-full blur-3xl -z-10"></div>
  <div class="max-w-7xl mx-auto px-4 lg:px-8 w-full">
    <div class="max-w-3xl">
      <h1 class="font-heading font-extrabold text-4xl md:text-5xl lg:text-6xl text-navy leading-tight mb-6" set:html={headline} />
      {subheadline && <p class="text-lg md:text-xl text-navy/70 mb-8 leading-relaxed max-w-2xl">{subheadline}</p>}
      <div class="flex flex-wrap gap-4">
        <a href={ctaHref} class="inline-block bg-primary hover:bg-primary-dark text-white font-heading font-bold px-8 py-4 rounded-full text-lg transition-colors shadow-lg shadow-primary/25 focus:outline-2 focus:outline-primary focus:outline-offset-2">
          {ctaText}
        </a>
        {secondaryCtaText && secondaryCtaHref && (
          <a href={secondaryCtaHref} class="inline-block bg-white hover:bg-gray-50 text-navy font-heading font-bold px-8 py-4 rounded-full text-lg transition-colors border-2 border-navy/10 focus:outline-2 focus:outline-primary focus:outline-offset-2">
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>

