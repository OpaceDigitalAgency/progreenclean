---
import ServiceIcon from './ServiceIcon.astro';

interface Props {
  title: string;
  slug: string;
  icon: string;
  description: string;
  price: string;
}

const { title, slug, description, price } = Astro.props;
---
<a href={`/services/${slug}/`} class="group block bg-white rounded-3xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 border border-card-bg hover:-translate-y-1.5">
  <div class="mb-4">
    <ServiceIcon slug={slug} size="w-16 h-16" />
  </div>
  <h3 class="font-heading font-bold text-lg text-navy mb-2 group-hover:text-primary transition-colors">{title}</h3>
  <p class="text-navy/60 text-sm leading-relaxed mb-3">{description}</p>
  <span class="inline-flex items-center gap-1 text-primary font-heading font-bold text-sm group-hover:gap-2 transition-all">
    {price}
    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
  </span>
</a>

