---
import ServiceIcon from './ServiceIcon.astro';

interface Props {
  title: string;
  slug: string;
  icon: string;
  description: string;
}

const { title, slug, description } = Astro.props;
---
<a href={`/services/${slug}/`} class="group block bg-white rounded-2xl p-8 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100 hover:-translate-y-2">
  <div class="mb-6 flex justify-center">
    <ServiceIcon slug={slug} size="w-24 h-24" />
  </div>
  <h3 class="font-heading font-bold text-xl text-navy mb-3 text-center group-hover:text-primary transition-colors">{title}</h3>
  <p class="text-navy/60 text-sm leading-relaxed text-center">{description}</p>
</a>

