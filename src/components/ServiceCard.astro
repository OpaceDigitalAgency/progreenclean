---
import ServiceIcon from './ServiceIcon.astro';

interface Props {
  title: string;
  slug: string;
  icon: string;
  description: string;
}

const { title, slug, description } = Astro.props;
---
<a href={`/services/${slug}/`} class="group block bg-white rounded-2xl p-8 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100 hover:-translate-y-2">
  <div class="flex gap-6 items-start">
    <div class="flex-shrink-0">
      <ServiceIcon slug={slug} size="w-20 h-20" />
    </div>
    <div class="flex-1 text-right">
      <h3 class="font-heading font-bold text-lg text-navy mb-2 group-hover:text-primary transition-colors">{title}</h3>
      <p class="text-navy/60 text-sm leading-relaxed">{description}</p>
    </div>
  </div>
</a>

