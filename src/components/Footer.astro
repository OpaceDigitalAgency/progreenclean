        </div>
        <a
          href="https://www.yell.com/biz/progreen-clean-ltd-epsom-11065244/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Review us on Yell"
          class="inline-block bg-white rounded-xl px-4 py-3 hover:bg-gray-50 transition-colors"
        >
          <p class="text-gray-500 text-xs mb-1">Review us on</p>
          <p class="font-bold text-xl text-black leading-none mb-2">
            <span class="text-[#FFCC00]">▲</span> Yell.com<span
              class="text-gray-400 text-sm font-normal">™</span
            >
          </p>
          <div class="flex gap-0.5">
            {
              Array.from({ length: 5 }).map((_, i) => (
                <svg
                  class={`w-5 h-5 ${i < 4 ? "text-[#FFCC00]" : "text-[#FFCC00]"} fill-current`}
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  {i < 4 ? (
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
