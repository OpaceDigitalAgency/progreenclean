                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  )}
                </svg>
              ))
            }
          </div>
        </a>
      </div>
      <div>
        <h3 class="font-heading font-bold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a
              href="/"
              class="text-white/70 hover:text-primary transition-colors">Home</a
            >
          </li>
          <li>
            <a
              href="/about/"
              class="text-white/70 hover:text-primary transition-colors"
              >About</a
            >
          </li>
          <li>
            <a
              href="/services/"
              class="text-white/70 hover:text-primary transition-colors"
              >Services</a
            >
          </li>
          <li>
            <a
              href="/quote/"
              class="text-white/70 hover:text-primary transition-colors"
              >Get a Quote</a
            >
          </li>
          <li>
            <a
              href="/reviews/"
              class="text-white/70 hover:text-primary transition-colors"
              >Reviews</a
            >
          </li>
          <li>
            <a
              href="/blog/"
              class="text-white/70 hover:text-primary transition-colors">Blog</a
            >
          </li>
          <li>
            <a
              href="/contact/"
              class="text-white/70 hover:text-primary transition-colors"
              >Contact</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h3 class="font-heading font-bold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2 text-sm">
          {
            services.map((s) => (
              <li>
                <a
                  href={`/services/${s.slug}/`}
                  class="text-white/70 hover:text-primary transition-colors"
                >
                  {s.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h3 class="font-heading font-bold text-lg mb-4">Contact Info</h3>
        <ul class="space-y-3 text-sm text-white/70">
          <li class="flex gap-2">
            <span class="material-symbols-rounded text-primary text-lg"
              >location_on</span
            ><span>99 Ebbisham Rd, Epsom,<br />Surrey KT18 7NS</span>
          </li>
          <li class="flex gap-2">
            <span class="material-symbols-rounded text-primary text-lg"
              >phone</span
            ><a
              href="tel:01372898732"
              class="hover:text-primary transition-colors">01372 898732</a
            >
          </li>
          <li class="flex gap-2">
            <span class="material-symbols-rounded text-primary text-lg"
              >mail</span
            ><a
              href="mailto:info@progreenclean.co.uk"
              class="hover:text-primary transition-colors"
              >info@progreenclean.co.uk</a
            >
          </li>
          <li class="flex gap-2">
            <span class="material-symbols-rounded text-primary text-lg"
              >schedule</span
            ><span>Mon–Sun: 7am–7pm</span>
          </li>
        </ul>
      </div>
    </div>
    <div
      class="border-t border-white/10 pt-6 flex flex-col md:flex-row items-center justify-between gap-4 text-xs text-white/50"
    >
      <p>
        &copy; {new Date().getFullYear()} ProGreen Clean Ltd. Company No. 16783547.
        All rights reserved.
      </p>
      <div class="flex gap-4">
        <a href="/privacy/" class="hover:text-primary transition-colors"
          >Privacy Policy</a
        >
        <a href="/cookie/" class="hover:text-primary transition-colors"
          >Cookie Policy</a
        >
        <a href="/terms/" class="hover:text-primary transition-colors"
          >Terms & Conditions</a
        >
      </div>
      <p>
        Site built by <a
          href="https://web-site.design"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/50 hover:text-primary transition-colors"
          >web-site.design</a
        >
      </p>
    </div>
  </div>
</footer>
