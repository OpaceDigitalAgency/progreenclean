---
interface Props {
  variant?: "teal-to-white" | "white-to-teal";
  flip?: boolean;
}

const { variant = "teal-to-white", flip = false } = Astro.props;

const colourSets: Record<string, { from: string; to: string }> = {
  "teal-to-white": { from: "#dfedea", to: "#ffffff" },
  "white-to-teal": { from: "#ffffff", to: "#dfedea" },
};

const c = colourSets[variant] ?? colourSets["teal-to-white"];
---

<div
  style={`background: ${flip ? c.to : c.from};`}
  class="w-full leading-none overflow-hidden"
>
  <svg
    class={`w-full block${flip ? " scale-y-[-1]" : ""}`}
    style="height: 70px;"
    viewBox="0 0 1440 70"
    preserveAspectRatio="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <path
      d="M0,35 C240,70 480,0 720,35 C960,70 1200,0 1440,35 L1440,70 L0,70 Z"
      fill={flip ? c.from : c.to}></path>
  </svg>
</div>
