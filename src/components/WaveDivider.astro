---
interface Props {
  variant?: 'teal-to-white' | 'white-to-teal' | 'teal-to-off-white' | 'off-white-to-white' | 'white-to-off-white';
  flip?: boolean;
}

const { variant = 'teal-to-white', flip = false } = Astro.props;

const colourSets: Record<string, { c1: string }> = {
  'teal-to-white': { c1: '#dfedea' },
  'white-to-teal': { c1: '#dfedea' },
  'teal-to-off-white': { c1: '#dfedea' },
  'off-white-to-white': { c1: '#dfedea' },
  'white-to-off-white': { c1: '#dfedea' },
};

const c = colourSets[variant];
---
<div class={`w-full leading-none ${flip ? 'transform rotate-180' : ''}`} style={`background-color: ${c.c1}; height: 60px;`} aria-hidden="true"></div>

