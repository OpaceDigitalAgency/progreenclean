---
const trustItems = [
  { icon: 'verified', label: 'Fully Insured' },
  { icon: 'eco', label: 'Eco-Friendly Products' },
  { icon: 'groups', label: '10+ Years Experience' },
  { icon: 'star', label: 'Trusted Locally' },
  { icon: 'schedule', label: 'Flexible Scheduling' },
  { icon: 'thumb_up', label: 'Satisfaction Guaranteed' },
];
---
<section class="bg-white py-10 border-y border-gray-100">
  <div class="max-w-7xl mx-auto px-4 lg:px-8">
    <h2 class="font-heading font-bold text-2xl text-navy text-center mb-8">Why Choose ProGreen Clean?</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      {trustItems.map((item) => (
        <div class="flex flex-col items-center text-center gap-2">
          <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center">
            <span class="material-symbols-rounded text-2xl text-accent">{item.icon}</span>
          </div>
          <span class="font-heading font-semibold text-sm text-navy">{item.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

