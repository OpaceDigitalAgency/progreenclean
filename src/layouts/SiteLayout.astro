---
import { SEO } from "astro-seo";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import {
  generatePageTitle,
  generateMetaDescription,
  generateCanonicalUrl,
} from "../utils/seo.js";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  schemas?: object[];
  noindex?: boolean;
}

const {
  title,
  description,
  ogImage,
  schemas = [],
  noindex = false,
} = Astro.props;
const pageTitle = generatePageTitle(Astro.url.pathname, title);
const metaDescription = generateMetaDescription(
  description,
  Astro.url.pathname,
);
const canonicalUrl = generateCanonicalUrl(Astro.url);
const ogImg = ogImage || "https://progreenclean.co.uk/og-default.jpg";
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href="/hero-bg.jpg" fetchpriority="high" />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800&family=Source+Sans+3:wght@400;600;700&display=swap"
      as="style"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800&family=Source+Sans+3:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0"
      rel="stylesheet"
    />
    <SEO
      title={pageTitle}
      description={metaDescription}
      canonical={canonicalUrl}
      noindex={noindex}
      openGraph={{
        basic: {
          title: pageTitle,
          type: "website",
          image: ogImg,
          url: canonicalUrl,
        },
        optional: {
          description: metaDescription,
          locale: "en_GB",
          siteName: "ProGreen Clean",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: pageTitle,
        description: metaDescription,
        image: ogImg,
      }}
    />
    {
      schemas.map((schema) => (
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
      ))
    }
  </head>
  <body class="bg-off-white text-navy font-body antialiased">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <Navigation />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
