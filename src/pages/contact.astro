---
import SiteLayout from "../layouts/SiteLayout.astro";
import PageHero from "../components/PageHero.astro";
import WaveDivider from "../components/WaveDivider.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import FormShell from "../components/forms/FormShell.astro";
import CtaBanner from "../components/CtaBanner.astro";
import { generateLocalBusinessSchema } from "../utils/seo.js";

const businessSchema = generateLocalBusinessSchema();
---

<SiteLayout
  title="Contact Us"
  description="Get in touch with ProGreen Clean Ltd. Call 07496 413460 or visit us at 99 Ebbisham Rd, Epsom, KT18 7NS."
  schemas={[businessSchema]}
>
  <PageHero
    headline="Get in <span class='text-primary'>Touch</span>"
    subheadline="Have a question, need a quote, or just want to say hello? We are always happy to hear from you."
    ctaText="Call Us Now"
    ctaHref="tel:07496413460"
  />
  <WaveDivider variant="teal-to-white" />
  <Breadcrumbs items={[{ name: "Home", url: "/" }, { name: "Contact" }]} />
  <section class="py-12 lg:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="font-heading font-bold text-2xl text-navy mb-6">
            Send Us a Message
          </h2>
          <FormShell formName="Contact">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="contact-name"
                  class="block text-sm font-semibold text-navy mb-1"
                  >Full name</label
                >
                <input
                  type="text"
                  id="contact-name"
                  name="name"
                  class="w-full rounded-xl border border-gray-200 px-4 py-3 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                  required
                />
              </div>
              <div>
                <label
                  for="contact-phone"
                  class="block text-sm font-semibold text-navy mb-1"
                  >Phone number</label
                >
                <input
                  type="tel"
                  id="contact-phone"
                  name="phone"
                  class="w-full rounded-xl border border-gray-200 px-4 py-3 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                />
              </div>
            </div>
            <div>
              <label
                for="contact-email"
                class="block text-sm font-semibold text-navy mb-1"
                >Email address</label
              >
              <input
                type="email"
                id="contact-email"
                name="email"
                class="w-full rounded-xl border border-gray-200 px-4 py-3 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                required
              />
            </div>
            <div>
              <label
                for="contact-subject"
                class="block text-sm font-semibold text-navy mb-1"
                >Subject</label
              >
              <input
                type="text"
                id="contact-subject"
                name="subject"
                class="w-full rounded-xl border border-gray-200 px-4 py-3 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
              />
            </div>
            <div>
              <label
                for="contact-message"
                class="block text-sm font-semibold text-navy mb-1"
                >Message</label
              >
              <textarea
                id="contact-message"
                name="message"
                rows="5"
                class="w-full rounded-xl border border-gray-200 px-4 py-3 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                required></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-primary hover:bg-primary-dark text-white font-heading font-bold px-8 py-4 rounded-full text-lg transition-colors shadow-lg shadow-primary/25"
              >Send Message</button
            >
          </FormShell>
        </div>
        <div class="space-y-8">
          <div>
            <h2 class="font-heading font-bold text-2xl text-navy mb-6">
              Contact Details
            </h2>
            <ul class="space-y-4 text-navy/70">
              <li class="flex gap-3">
                <span class="material-symbols-rounded text-primary text-xl"
                  >location_on</span
                ><span
                  >ProGreen Clean Ltd<br />99 Ebbisham Rd<br />Epsom, Surrey
                  KT18 7NS</span
                >
              </li>
              <li class="flex gap-3">
                <span class="material-symbols-rounded text-primary text-xl"
                  >phone</span
                ><a
                  href="tel:07496413460"
                  class="hover:text-primary transition-colors font-semibold"
                  >07496 413460</a
                >
              </li>
              <li class="flex gap-3">
                <span class="material-symbols-rounded text-primary text-xl"
                  >mail</span
                ><a
                  href="mailto:info@progreenclean.co.uk"
                  class="hover:text-primary transition-colors"
                  >info@progreenclean.co.uk</a
                >
              </li>
              <li class="flex gap-3">
                <span class="material-symbols-rounded text-primary text-xl"
                  >schedule</span
                ><span>Monday – Sunday: 7am – 7pm</span>
              </li>
            </ul>
          </div>
          <div
            class="rounded-2xl overflow-hidden shadow-lg border border-gray-100"
          >
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2497.5!2d-0.267!3d51.337!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4876073f0c0e4d27%3A0x1234567890abcdef!2s99+Ebbisham+Rd%2C+Epsom+KT18+7NS!5e0!3m2!1sen!2suk!4v1"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              title="Map showing ProGreen Clean office at 99 Ebbisham Rd, Epsom"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
  <CtaBanner
    headline="Ready to Get Started?"
    text="Get your free, no-obligation quote in under two minutes. We cover Epsom, Ewell, Ashtead, Leatherhead, Banstead and the wider Surrey area."
  />
</SiteLayout>
