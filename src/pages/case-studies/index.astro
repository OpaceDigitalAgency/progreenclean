---
import SiteLayout from '../../layouts/SiteLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CtaBanner from '../../components/CtaBanner.astro';

const studies = [
  {
    title: 'Full Exterior Clean for a Period Home in Epsom',
    slug: 'period-home-exterior-epsom',
    excerpt: 'Windows, gutters, fascias and a moss-covered driveway — all brought back to life over two days.',
    services: ['Window Cleaning', 'Gutter Cleaning', 'Pressure Washing'],
  },
  {
    title: 'End-of-Tenancy Deep Clean for a Four-Bed Rental',
    slug: 'end-of-tenancy-four-bed',
    excerpt: 'A letting agent needed the property spotless for a next-day checkout inspection. We delivered.',
    services: ['End of Tenancy Cleaning', 'Carpet Cleaning', 'Oven Cleaning'],
  },
  {
    title: 'Monthly Office Cleaning Contract in Leatherhead',
    slug: 'office-cleaning-leatherhead',
    excerpt: 'A 3,000 sq ft office needed reliable, out-of-hours cleaning. We set up a flexible monthly contract.',
    services: ['Commercial Cleaning'],
  },
];
---
<SiteLayout title="Case Studies" description="Real-world examples of our cleaning work across Epsom and Surrey. See the results for yourself.">
  <HeroSection
    headline="Our Work<br /><span class='text-primary'>Speaks for Itself</span>"
    subheadline="Real jobs, real results. Here are a few examples of the work we do for homeowners and businesses across Surrey."
    compact={true}
  />
  <Breadcrumbs items={[{ name: 'Home', url: '/' }, { name: 'Case Studies' }]} />
  <section class="py-16 lg:py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 lg:px-8 space-y-8">
      {studies.map((study) => (
        <article class="bg-off-white rounded-2xl p-6 lg:p-8 border border-gray-100">
          <h2 class="font-heading font-bold text-xl text-navy mb-2">
            <a href={`/case-studies/${study.slug}/`} class="hover:text-primary transition-colors">{study.title}</a>
          </h2>
          <div class="flex flex-wrap gap-2 mb-3">
            {study.services.map((svc) => (
              <span class="bg-primary/10 text-primary text-xs font-semibold px-2 py-1 rounded-full">{svc}</span>
            ))}
          </div>
          <p class="text-navy/60 text-sm leading-relaxed mb-3">{study.excerpt}</p>
          <a href={`/case-studies/${study.slug}/`} class="text-primary font-heading font-bold text-sm hover:underline">Read the full case study →</a>
        </article>
      ))}
    </div>
  </section>
  <CtaBanner />
</SiteLayout>

