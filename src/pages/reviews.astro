---
import SiteLayout from "../layouts/SiteLayout.astro";
import PageHero from "../components/PageHero.astro";
import WaveDivider from "../components/WaveDivider.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import CtaBanner from "../components/CtaBanner.astro";
import reviews from "../data/reviews.json";
import { generateLocalBusinessSchema } from "../utils/seo.js";

const sourceIcons: Record<string, string> = {
  Yell: "ðŸŸ¡",
  Checkatrade: "âœ…",
  Facebook: "ðŸ”µ",
  Google: "ðŸ”´",
};

const sourceLinks: Record<string, string> = {
  Yell: "https://www.yell.com/biz/progreen-clean-ltd-epsom-11065244/",
  Checkatrade: "https://www.checkatrade.com/trades/progreencleanltd",
  Facebook: "https://www.facebook.com/ProGreenClean/",
};

const totalRating = reviews.reduce((sum, r) => sum + r.rating, 0);
const avgRating = (totalRating / reviews.length).toFixed(1);

function formatDate(dateStr: string) {
  return new Date(dateStr).toLocaleDateString("en-GB", {
    day: "numeric",
    month: "long",
    year: "numeric",
  });
}

const platformCounts = ["Yell", "Checkatrade", "Facebook"].map((src) => ({
  src,
  count: reviews.filter((r) => r.source === src).length,
}));

const localBusinessSchema = generateLocalBusinessSchema({
  ratingValue: avgRating,
  reviewCount: reviews.length,
});
---

<SiteLayout
  title="Customer Reviews"
  description="Read genuine 5-star reviews from ProGreen Clean customers across Epsom and Surrey. Verified reviews from Yell, Checkatrade and Facebook."
  schemas={[localBusinessSchema]}
>
  <PageHero
    headline="What Our <span class='text-primary'>Customers</span> Say"
    subheadline="We take pride in honest, verified feedback from real customers. No fake reviews, no paid testimonials."
    ctaText="Get a Free Quote"
    ctaHref="/quote/"
  />
  <WaveDivider variant="teal-to-white" />
  <Breadcrumbs items={[{ name: "Home", url: "/" }, { name: "Reviews" }]} />

  <section class="py-16 lg:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <div
        class="flex flex-col md:flex-row items-center justify-between gap-8 mb-14"
      >
        <div>
          <p
            class="text-primary font-heading font-bold uppercase tracking-widest text-sm mb-2"
          >
            Our Rating
          </p>
          <div class="flex items-baseline gap-3 mb-2">
            <span class="font-heading font-extrabold text-6xl text-navy"
              >{avgRating}</span
            >
            <span class="text-navy/40 text-xl font-heading">/ 5</span>
          </div>
          <div class="flex gap-1 mb-2">
            {
              Array.from({ length: 5 }).map(() => (
                <svg
                  class="w-6 h-6 text-yellow-400 fill-current"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))
            }
          </div>
          <p class="text-navy/50 text-sm">
            {reviews.length} verified reviews across multiple platforms
          </p>
        </div>
        <div class="flex gap-4">
          {
            platformCounts.map(({ src, count }) => (
              <a
                href={sourceLinks[src] ?? "#"}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-[#dfedea] hover:bg-primary/10 rounded-xl p-4 text-center min-w-[90px] transition-colors group"
              >
                <p class="text-2xl mb-1">{sourceIcons[src]}</p>
                <p class="font-heading font-bold text-navy text-sm group-hover:text-primary transition-colors">
                  {src}
                </p>
                <p class="text-navy/50 text-xs">
                  {count} review{count !== 1 ? "s" : ""}
                </p>
              </a>
            ))
          }
        </div>
      </div>

      <div
        class="columns-1 sm:columns-2 lg:columns-3 gap-6 [column-fill:_balance]"
      >
        {
          reviews.map((r) => (
            <article class="break-inside-avoid mb-6 bg-white border border-gray-100 rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
              <div class="flex items-start justify-between gap-3 mb-4">
                <div class="w-11 h-11 rounded-full bg-[#dfedea] flex items-center justify-center shrink-0">
                  <span class="font-heading font-bold text-primary text-lg">
                    {r.name.charAt(0)}
                  </span>
                </div>
                <a
                  href={sourceLinks[r.source] ?? "#"}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-xs font-medium text-navy/40 hover:text-navy/70 bg-gray-50 hover:bg-gray-100 px-2 py-1 rounded-full whitespace-nowrap transition-colors"
                >
                  {sourceIcons[r.source]} {r.source}
                </a>
              </div>
              <div class="flex gap-0.5 mb-3">
                {Array.from({ length: r.rating }).map(() => (
                  <svg
                    class="w-4 h-4 text-yellow-400 fill-current"
                    viewBox="0 0 20 20"
                    aria-hidden="true"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              {r.title && (
                <h3 class="font-heading font-bold text-base text-navy mb-2">
                  {r.title}
                </h3>
              )}
              <blockquote class="text-navy/60 text-sm leading-relaxed mb-4">
                "{r.body}"
              </blockquote>
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <div>
                  <p class="font-heading font-semibold text-sm text-navy">
                    {r.name}
                  </p>
                  <p class="text-navy/40 text-xs">{r.location}</p>
                </div>
                <p class="text-navy/30 text-xs">{formatDate(r.date)}</p>
              </div>
            </article>
          ))
        }
      </div>

      <div
        class="mt-14 bg-[#dfedea] rounded-2xl p-8 lg:p-12 flex flex-col lg:flex-row items-center gap-8"
      >
        <div class="flex-1">
          <h2
            class="font-heading font-extrabold text-2xl lg:text-3xl text-navy mb-3"
          >
            Seen our work? Leave a review.
          </h2>
          <p class="text-navy/60 leading-relaxed max-w-lg">
            We rely on honest feedback to keep improving. If you have used
            ProGreen Clean we would genuinely appreciate hearing from you â€” it
            takes less than a minute.
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 shrink-0">
          <a
            href={sourceLinks.Yell}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-[#FFCC00] hover:bg-yellow-300 text-black font-heading font-bold px-6 py-3 rounded-full transition-all shadow-md"
          >
            ðŸŸ¡ Review on Yell
          </a>
          <a
            href={sourceLinks.Checkatrade}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-[#00973A] hover:bg-green-700 text-white font-heading font-bold px-6 py-3 rounded-full transition-all shadow-md"
          >
            âœ… Review on Checkatrade
          </a>
        </div>
      </div>
    </div>
  </section>
  <CtaBanner />
</SiteLayout>
