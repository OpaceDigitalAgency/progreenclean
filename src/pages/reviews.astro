---
import SiteLayout from "../layouts/SiteLayout.astro";
import PageHero from "../components/PageHero.astro";
import WaveDivider from "../components/WaveDivider.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import CtaBanner from "../components/CtaBanner.astro";
---

<SiteLayout
  title="Customer Reviews"
  description="Read genuine feedback from ProGreen Clean customers across Epsom and Surrey. Real reviews from real people."
>
  <PageHero
    headline="What Our <span class='text-primary'>Customers</span> Say"
    subheadline="We take pride in honest, verified feedback. No fake reviews, no paid testimonials — just genuine words from real customers."
  />
  <WaveDivider variant="teal-to-white" />
  <Breadcrumbs items={[{ name: "Home", url: "/" }, { name: "Reviews" }]} />
  <section class="py-16 lg:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <div
        class="bg-[#dfedea] rounded-2xl p-8 lg:p-12 text-center max-w-3xl mx-auto"
      >
        <span class="material-symbols-rounded text-6xl text-primary mb-4 block"
          >rate_review</span
        >
        <h2 class="font-heading font-bold text-2xl text-navy mb-4">
          Reviews Coming Soon
        </h2>
        <p class="text-navy/70 leading-relaxed mb-4 max-w-xl mx-auto">
          We are currently collecting verified reviews from our customers. We
          believe in honesty, so we will only display genuine feedback — never
          fabricated testimonials or inflated ratings.
        </p>
        <p class="text-navy/70 leading-relaxed max-w-xl mx-auto">
          If you have used our services and would like to leave a review, please
          get in touch at <a
            href="mailto:info@progreenclean.co.uk"
            class="text-primary font-semibold hover:underline"
            >info@progreenclean.co.uk</a
          > or call <a
            href="tel:01372898732"
            class="text-primary font-semibold hover:underline">01372 898732</a
          >.
        </p>
      </div>
    </div>
  </section>
  <CtaBanner />
</SiteLayout>
