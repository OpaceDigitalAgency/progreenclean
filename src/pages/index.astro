---
import SiteLayout from '../layouts/SiteLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TrustBar from '../components/TrustBar.astro';
import ProcessSteps from '../components/ProcessSteps.astro';
import CtaBanner from '../components/CtaBanner.astro';
import ServiceAreaMap from '../components/ServiceAreaMap.astro';
import WaveDivider from '../components/WaveDivider.astro';
import services from '../data/services.json';
---
<SiteLayout>
  <HeroSection
    headline="Professional Window &amp; Gutter<br />Cleaning in <span class='text-secondary'>Epsom</span>"
    subheadline="Fresh, reliable cleaning for homes and businesses across Epsom and Surrey. Fully insured, family-run, and trusted locally."
    ctaText="Get an Instant Quote"
    ctaHref="/quote/"
    secondaryCtaText="Call Us"
    secondaryCtaHref="tel:01372898732"
  />
  <TrustBar />
  <WaveDivider variant="white-to-off-white" />
  <section class="py-16 lg:py-20 bg-off-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <h2 class="font-heading font-bold text-3xl text-navy text-center mb-4">Our Professional Services</h2>
      <p class="text-navy/60 text-center mb-12 max-w-2xl mx-auto">From gleaming windows to spotless ovens, we handle every type of clean — domestic and commercial — across Epsom and the surrounding Surrey towns.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.slice(0, 9).map((s) => (
          <ServiceCard title={s.title} slug={s.slug} icon={s.icon} description={s.description} price={s.price} />
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="/services/" class="inline-block bg-accent hover:bg-accent-dark text-white font-heading font-bold px-8 py-3 rounded-full transition-all shadow-md hover:shadow-lg hover:scale-105">
          View All Services
        </a>
      </div>
    </div>
  </section>
  <WaveDivider variant="off-white-to-white" />
  <ProcessSteps />
  <WaveDivider variant="white-to-off-white" />
  <section class="py-16 lg:py-20 bg-off-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="font-heading font-bold text-3xl text-navy mb-4">Who We Are</h2>
          <p class="text-navy/70 leading-relaxed mb-4">ProGreen Clean is a family-run business rooted in Epsom, Surrey. For over ten years, we have been keeping local homes and businesses looking their best — using methods that are kinder to the environment and gentler on your property.</p>
          <p class="text-navy/70 leading-relaxed mb-6">Every member of our team is fully trained, DBS checked and insured. We turn up on time, treat your property with care, and do not leave until the job meets our high standards.</p>
          <a href="/about/" class="inline-block bg-accent hover:bg-accent-dark text-white font-heading font-bold px-8 py-3 rounded-full transition-all shadow-md hover:shadow-lg hover:scale-105">
            Learn More About Us
          </a>
        </div>
        <div class="bg-white rounded-3xl p-8 text-center shadow-sm border border-card-bg">
          <div class="grid grid-cols-2 gap-6">
            <div class="p-4"><span class="block font-heading font-extrabold text-4xl text-primary mb-1">10+</span><span class="text-navy/60 text-sm">Years Experience</span></div>
            <div class="p-4"><span class="block font-heading font-extrabold text-4xl text-primary mb-1">500+</span><span class="text-navy/60 text-sm">Happy Customers</span></div>
            <div class="p-4"><span class="block font-heading font-extrabold text-4xl text-primary mb-1">12</span><span class="text-navy/60 text-sm">Services Offered</span></div>
            <div class="p-4"><span class="block font-heading font-extrabold text-4xl text-primary mb-1">100%</span><span class="text-navy/60 text-sm">Satisfaction Guarantee</span></div>
