---
import SiteLayout from '../../layouts/SiteLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import CtaBanner from '../../components/CtaBanner.astro';
import services from '../../data/services.json';
---
<SiteLayout title="Our Cleaning Services" description="Browse our full range of domestic and commercial cleaning services in Epsom and Surrey. Windows, gutters, carpets, ovens and more.">
  <HeroSection
    headline="Every Clean You Could<br /><span class='text-primary'>Possibly Need</span>"
    subheadline="Domestic or commercial, inside or out — we have got the equipment, the training and the experience to handle it all."
    compact={true}
  />
  <Breadcrumbs items={[{ name: 'Home', url: '/' }, { name: 'Services' }]} />
  <section class="py-20 lg:py-28 bg-gradient-to-b from-aqua-light/30 via-white to-white relative overflow-hidden">
    <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-aqua-light/20 to-transparent -z-10"></div>
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <h2 class="font-heading font-bold text-4xl text-navy text-center mb-6">Our Professional Services</h2>
      <p class="text-navy/60 text-center mb-16 max-w-3xl mx-auto text-lg">From gleaming windows to spotless ovens, we handle every type of clean — domestic and commercial — across Epsom and the surrounding Surrey towns.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((s) => (
          <ServiceCard title={s.title} slug={s.slug} icon={s.icon} description={s.description} />
        ))}
      </div>
    </div>
  </section>
  <section class="py-16 lg:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8 text-center">
      <h2 class="font-heading font-bold text-3xl text-navy mb-4">Not Sure Which Service You Need?</h2>
      <p class="text-navy/60 mb-8 max-w-2xl mx-auto">No problem. Give us a ring on <a href="tel:01372898732" class="text-primary font-semibold hover:underline">01372 898732</a> or fill in our quick quote form. We will point you in the right direction.</p>
      <a href="/quote/" class="inline-block bg-primary hover:bg-primary-dark text-white font-heading font-bold px-8 py-4 rounded-full text-lg transition-colors shadow-lg shadow-primary/25">Get a Free Quote</a>
    </div>
  </section>
  <CtaBanner />
</SiteLayout>

